{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "test/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "codegen.ts",
    "src/callbacks/searchNote.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
